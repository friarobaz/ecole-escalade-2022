{
    "compilerOptions": {
        "module": "ES2022",
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "moduleResolution": "Node",
        "rootDirs": ["."],
        "target": "ES2017",
        "declarationDir": "typings",
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["lib/**/*.js", "types/**/*.js", "plugins/**/*.js"],
    "exclude": [
        "**/node_modules/*",
        "**/tmp/*",
        "**/.history/*",
        "**/spec",
        "test",
        "examples",
        "site",
        "jest.config.js"
    ]
}
